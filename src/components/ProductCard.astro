---
const {
    Producto,
    Descripcion,
    Precio,
    Cantidad,
    Imagen,
    Categoria,
    Marca,
    Estilo,
} = Astro.props;
---

<div>
    <div class="rounded-lg shadow-md overflow-hidden">
        <img src={Imagen} alt={Producto} class="w-full h-48 object-cover" />
        <div class="p-4">
            <h2 class="text-lg font-bold">{Producto}</h2>
            <p class="text-gray-600 text-sm">{Descripcion}</p>
            <p class="text-gray-500 text-sm">Marca: {Marca}</p>
            <p class="text-gray-500 text-sm">Categor√≠a: {Categoria}</p>
            <p class="text-gray-500 text-sm">Estilo: {Estilo}</p>
            <p class="text-gray-500 text-sm">Cantidad Disponible: {Cantidad}</p>
            <p class="text-red-500 font-semibold mt-2">${Precio}</p>
            <a
                href={`/products/${Producto}`}
                class="block mt-4 bg-red-500 hover:bg-red-600 text-white text-center py-2 px-4 rounded transition-all"
            >
                Agregar al carrito
            </a>
        </div>
    </div>
</div>
