<div
    id="modal-upload-photo"
    class="fixed inset-0 z-50 hidden items-center justify-center bg-black/80 bg-opacity-50"
>
    <div
        class="bg-white rounded-lg shadow-lg p-6 w-full max-w-md mx-auto relative"
    >
        <button
            id="close-modal"
            class="absolute top-2 right-2 text-gray-400 hover:text-gray-600"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
        <h2 class="text-lg font-semibold text-gray-900 mb-4">
            Cambiar foto de perfil
        </h2>

        <div class="flex flex-col items-center">
            <div
                class="w-24 h-24 mb-4 rounded-full bg-gray-100 overflow-hidden"
            >
                <img
                    id="preview-image"
                    src=""
                    alt="Vista previa"
                    class="object-cover w-full h-full hidden"
                />
            </div>

            <input
                type="file"
                id="file-input"
                accept="image/*"
                class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 text-center file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-red-50 file:text-red-700 hover:file:bg-red-100"
            />

            <div class="mt-6 flex justify-end space-x-3 w-full">
                <button
                    id="cancel-upload"
                    class="px-4 py-2 text-sm hover:cursor-pointer text-gray-600 bg-gray-100 rounded-md hover:bg-gray-200"
                >
                    Cancelar
                </button>
                <button
                    id="confirm-upload"
                    class="px-4 py-2 text-sm hover:cursor-pointer text-white bg-red-600 rounded-md hover:bg-red-700"
                >
                    Guardar
                </button>
            </div>
        </div>
    </div>
</div>
