<style>
    .title-reveal {
        opacity: 0;
        transform: translateY(20px);
    }

    .title-reveal-bar {
        transform: scaleX(0);
        transform-origin: center;
        opacity: 0;
    }

    .about-desc {
        transform: translateY(20px);
    }

    .timeline-section {
        transform: translateY(30px);
    }

    .timeline-line {
        transform: scaleX(0);
        transform-origin: left;
    }

    .values-title {
        transform: translateY(20px);
    }

    .about-card {
        transform: translateY(30px);
        background: rgba(255, 255, 255, 0.98);
        box-shadow:
            0 4px 24px 0 rgba(0, 0, 0, 0.06),
            0 1.5px 8px 0 rgba(220, 38, 38, 0.1);
        transition:
            transform 0.3s ease-out,
            box-shadow 0.3s ease-out;
        border: 1px solid rgba(239, 68, 68, 0.1);
    }

    .about-card:hover {
        transform: translateY(-8px) scale(1.03);
        box-shadow:
            0 12px 32px 0 rgba(220, 38, 38, 0.16),
            0 2px 16px 0 rgba(0, 0, 0, 0.08);
    }

    .team-section {
        transform: translateY(30px);
    }

    .avatar-container {
        transition:
            transform 0.3s ease,
            border-color 0.3s ease;
    }

    .team-member:hover .avatar-container {
        transform: scale(1.05);
        border-color: rgb(239, 68, 68);
    }

    @keyframes blob {
        0% {
            transform: scale(1) translate(0px, 0px);
        }
        33% {
            transform: scale(1.1) translate(20px, -10px);
        }
        66% {
            transform: scale(0.9) translate(-20px, 10px);
        }
        100% {
            transform: scale(1) translate(0px, 0px);
        }
    }

    .animate-blob {
        animation: blob 8s infinite;
    }

    .animation-delay-2000 {
        animation-delay: 2s;
    }

    .animation-delay-4000 {
        animation-delay: 4s;
    }

    @media (max-width: 900px) {
        .grid {
            grid-template-columns: 1fr !important;
        }
    }

    @media (max-width: 768px) {
        .team-container {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 640px) {
        .text-5xl {
            font-size: 2.25rem !important;
        }
        .p-8 {
            padding: 1.5rem !important;
        }
        .timeline-section .flex-row {
            flex-direction: column !important;
        }
        .timeline-line {
            width: 1px !important;
            height: 40px !important;
        }
    }
</style>
