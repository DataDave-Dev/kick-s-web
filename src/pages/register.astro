---
export const prerender = false;
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";

const error = Astro.url.searchParams.get("error");
const success = Astro.url.searchParams.get("success");
---

<Layout title="Registro">
    <SectionContainer class="py-20">
        <div class="bg-white w-full max-w-md mx-auto rounded-2xl shadow-xl p-8">
            <h1 class="text-3xl text-center font-bold mb-2 text-gray-800">
                Crear cuenta
            </h1>
            <p class="text-center text-gray-500 mb-6">
                ¿Ya tienes una cuenta?
                <a
                    href="/signin"
                    class="text-red-500 hover:underline font-semibold"
                    >Inicia sesión</a
                >
            </p>
            {
                error && (
                    <div class="mb-4 p-3 rounded bg-red-100 text-red-700 text-center font-semibold">
                        {error}
                    </div>
                )
            }
            {
                success && (
                    <div class="mb-4 p-3 rounded bg-green-100 text-green-700 text-center font-semibold">
                        ¡Registro exitoso!
                    </div>
                )
            }
            <form
                action="/api/auth/register"
                method="post"
                class="flex flex-col gap-4"
            >
                <div>
                    <label
                        for="email"
                        class="block text-sm font-medium text-gray-700 mb-1"
                        >Correo electrónico</label
                    >
                    <input
                        type="email"
                        name="email"
                        id="email"
                        required
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-400 transition"
                        placeholder="tucorreo@ejemplo.com"
                    />
                </div>
                <div>
                    <label
                        for="password"
                        class="block text-sm font-medium text-gray-700 mb-1"
                        >Contraseña</label
                    >
                    <input
                        type="password"
                        name="password"
                        id="password"
                        required
                        minlength="8"
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-400 transition"
                        placeholder="Mínimo 6 caracteres"
                    />
                </div>
                <button
                    type="submit"
                    class="w-full bg-red-500 hover:bg-red-600 hover:cursor-pointer text-white font-bold py-2 rounded-lg shadow transition-all text-lg mt-2"
                >
                    Registrarme
                </button>
            </form>
        </div>
    </SectionContainer>
    <style>
        @media (max-width: 640px) {
            .max-w-md {
                max-width: 95vw !important;
            }
            .p-8 {
                padding: 1.5rem !important;
            }
            .text-3xl {
                font-size: 2rem !important;
            }
        }
    </style>
</Layout>
